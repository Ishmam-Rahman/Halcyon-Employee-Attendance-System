@model HalcyonAttendance.Models.VisitorDetails

@{
    ViewData["Title"] = "Create";
}
@section head{

    <link href="~/Regform/css/main.css" rel="stylesheet" />
    <script src="~/Regform/js/global.js"></script>
    <script src="~/Regform/vendor/jquery/jquery.js"></script>
    <link href="~/Regform/vendor/select2/select2.min.css" rel="stylesheet" />
    <script src="~/Regform/vendor/select2/select2.min.js"></script>
    <link href="~/Regform/vendor/font-awesome-4.7/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Regform/vendor/datepicker/daterangepicker.css" rel="stylesheet" />
    <script src="~/Regform/vendor/datepicker/daterangepicker.js"></script>
    <script src="~/Regform/vendor/datepicker/moment.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <link href="~/Regform/vendor/font-awesome-4.7/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Regform/vendor/mdi-font/css/material-design-iconic-font.css" rel="stylesheet" />
}

<center>
    <h1>Welcome to Halcyon IT Solution</h1>
</center>
<hr />

<div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
    <div class="wrapper wrapper--w790">
        <div class="card card-5">
            <div class="card-heading">
                <h2 class="title">Visitor Info Form</h2>
            </div>
            <div class="card-body">
                <form method="POST" asp-action="Create" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="name">Name</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="Name" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Email</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="Email" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="name">Phone</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="Phone" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Type</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="Type" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Professio</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="Profession" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn--radius-2 btn--blue" type="submit">Add</button>
                    </div>
                </form>

            </div>
        </div>
        <a asp-action="LoadVisitor" class="btn btn--green">Visitor List</a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function() {
            var alerta = '@TempData["AddedVis"]';
            if (alerta != '') {
                alertify.success(alerta);
            }
        })
    </script>
}


