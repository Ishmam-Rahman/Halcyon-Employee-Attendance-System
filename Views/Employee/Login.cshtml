@model HalcyonAttendance.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<center>
    <h1>Welcome to Halcyon</h1>
</center>

<div icon>
    <center>
        <h4>Employee Login</h4>
    </center>
</div>

<hr />
<h3>@ViewBag.message</h3>

    <div class="row">
        <div class="col-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LoginEmail" class="control-label"></label>
                    <input asp-for="LoginEmail" class="form-control" />
                    <span asp-validation-for="LoginEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enter" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

<div>
    <a asp-action="ChangePassword">Change Password???</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
