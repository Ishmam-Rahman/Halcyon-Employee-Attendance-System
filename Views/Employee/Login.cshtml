@model HalcyonAttendance.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
@section head{
    <style type="text/css">
        body {
            background-image: url('..\images\bg.jpg');
            margin: 0;
        }
    </style>
}

<section class="w3l-forms-main-61" runat="server">
    <div class="form-inner">
        <div class="wrapper">
            <div class="d-grid top-form">
                <div class="logo">
                    <a class="brand-logo" href="index.html">
                        <span>
                            <span class="fa fa-viadeo"
                                  aria-hidden="true"></span> Halcyon It Solution
                        </span>
                    </a>
                    <!--<a class="brand-logo" href="#index.html">
                    <img src="image-path" alt="Your logo" title="Your logo" style="height:35px;" />
                                </a>-->
                </div>
            </div>
            <div class="form-bg-blur">
                <div class="form-61">
                    <h4 class="form-head">Employee Login</h4>

                    <form asp-action="Login" method="post">
                        <div class="">
                            <p class="text-head">Email</p>
                            <input type="text" asp-for="LoginEmail" class="input" required />
                        </div>
                        <div class="">
                            <p class="text-head">Password</p>
                            <input type="password" asp-for="Password" class="input" required />
                        </div>
                        <button type="submit" class="signinbutton btn">Get started</button>
                        <p class="signup">Changg password?<a asp-action="ChangePassword" class="signuplink">Click here</a></p>
                    </form>
                </div>
            </div>
            <!--
            <div class="go-to-home text-center">
                <p>Want to Create account? <a class="btn" href="signup.html"> Signup </a></p>
            </div> -->
        </div>
        <div class="copyright text-center">
            <div class="wrapper">
                <p class="copy-footer-29">
                    © 2020 Desk Login form. All rights reserved | Designed by <a href="https://w3layouts.com">W3layouts</a>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function() {
            var alerti = '@TempData["login"]';
            var alerto = '@TempData["logout"]';
            var alerte = '@TempData["error"]';
            var alertcps = '@TempData["cps"]';

            if (alerti != '') {
                alertify.success(alerti);
            }
            else if (alerto != '') {
                alertify.success(alerto);
            }
            else if (alerte != '') {
                alertify.error(alerte);
            }
            else if (alertcps != '') {
                alertify.success(alertcps);
            }
        })
    </script>
}
