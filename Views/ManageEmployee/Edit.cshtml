@model HalcyonAttendance.Models.EmployeeDetails

@{
    ViewData["Title"] = "Edit";
}
@section head{

    <link href="~/Regform/css/main.css" rel="stylesheet" />
    <script src="~/Regform/js/global.js"></script>
    <script src="~/Regform/vendor/jquery/jquery.js"></script>
    <link href="~/Regform/vendor/select2/select2.min.css" rel="stylesheet" />
    <script src="~/Regform/vendor/select2/select2.min.js"></script>
    <link href="~/Regform/vendor/font-awesome-4.7/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Regform/vendor/datepicker/daterangepicker.css" rel="stylesheet" />
    <script src="~/Regform/vendor/datepicker/daterangepicker.js"></script>
    <script src="~/Regform/vendor/datepicker/moment.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    <link href="~/Regform/vendor/font-awesome-4.7/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Regform/vendor/mdi-font/css/material-design-iconic-font.css" rel="stylesheet" />
}



<div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
    <div class="wrapper wrapper--w790">
        <div class="card card-5">
            <div class="card-heading">
                <h2 class="title">Edit employee details</h2>
            </div>
            <div class="card-body">
                <form method="POST" asp-action="Edit" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="name">Name</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="EmpName" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Email</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="EmpEmail" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Password</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="EmpPassword" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Phone</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="EmpPhone" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Position</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="EmpPosition" class="input--style-5" type="text">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Salary</div>
                        <div class="value">
                            <div class="input-group">
                                <input asp-for="EmpSalary" class="input--style-5" type="number">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">

                        <div class="value">
                            <div class="input-group">
                                <input asp-for="EmpImage" class="input--style-5" type="hidden">
                            </div>
                        </div>
                    </div>


                    <div>
                        <button class="btn btn--radius-2 btn--blue" type="submit">Update</button>
                    </div>
                </form>

            </div>
        </div>
        <a asp-action="ShowAllEmp" class="btn btn--green">Back to List</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
